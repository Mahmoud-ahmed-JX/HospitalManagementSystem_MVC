@using HospitalBLL.DTOs.DepartmentDtos
@model DepartmentWithDoctorsDto
@{
    ViewData["Title"] = "Department Details";
}

<div class="hospital-card mx-auto shadow-lg" style="max-width: 900px;">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <div>
            <h2 class="mb-1 text-accent">
                <i class="bi bi-building me-2"></i> @Model.Name
            </h2>
            <div class="text-muted small">
                <i class="bi bi-hash"></i> <span class="me-3">ID: @Model.Id</span>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="bi bi-arrow-left"></i> Back to Departments
        </a>
    </div>

    <div class="mb-4">
        <div class="fw-semibold text-muted mb-1">Description</div>
        <div class="bg-dark bg-opacity-25 rounded p-3">@Model.Description</div>
    </div>

    <div class="mb-2 d-flex align-items-center">
        <h4 class="text-accent mb-0 me-2">
            <i class="bi bi-person-badge me-1"></i> Doctors
        </h4>
        <span class="badge rounded-pill bg-accent text-dark ms-2" style="font-size:1rem;">
            @(Model.Doctors?.Count() ?? 0)
        </span>
    </div>

    @if (Model.Doctors != null && Model.Doctors.Any())
    {
        <div class="row g-3">
            @foreach (var doc in Model.Doctors)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm hospital-card p-3">
                        <div class="d-flex align-items-center mb-2">
                            <div class="flex-shrink-0 me-3">
                                <i class="bi bi-person-circle text-accent" style="font-size:2rem;"></i>
                            </div>
                            <div>
                                <div class="fw-bold fs-5">@doc.FullName</div>
                                <div class="text-muted small">@doc.Specialization</div>
                            </div>
                        </div>
                        <div class="mb-2">
                            <span class="badge bg-secondary bg-opacity-25 text-accent">
                                <i class="bi bi-award me-1"></i> @doc.ExperienceYears yrs
                            </span>
                        </div>
                        <a asp-controller="Doctors" asp-action="Details" asp-route-id="@doc.Id"
                           class="btn btn-sm btn-outline-accent w-100 mt-2">
                            <i class="bi bi-eye"></i> View Profile
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-3">
            <i class="bi bi-info-circle"></i> No doctors are currently assigned to this department.
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
}

