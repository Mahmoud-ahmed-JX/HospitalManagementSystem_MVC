@model IEnumerable<HospitalBLL.DTOs.DepartmentDtos.DepartmentDto>

@{
    ViewData["Title"] = "Departments";
}

<div class="hospital-card">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0 text-accent">
            <i class="bi bi-building me-2"></i> Departments
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Add Department
        </a>
    </div>
    <form method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search departments..." value="@(Context.Request.Query["search"])" />
            <button class="btn btn-outline-light" type="submit">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>
    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle rounded">
            <thead>
                <tr>
                    <th style="width:60px;">#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th style="width:120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int i = 1;
                    foreach (var dept in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td class="fw-semibold">@dept.Name</td>
                            <td>@dept.Description</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@dept.Id" class="btn btn-sm btn-outline-light me-1" data-bs-toggle="tooltip" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@dept.Id" class="btn btn-sm btn-outline-light me-1" data-bs-toggle="tooltip" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@dept.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="Delete"
                                            onclick="return confirm('Are you sure you want to delete this department?');">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">No departments found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (TempData["ToastMessage"] != null)
{
    <div class="toast show position-fixed bottom-0 end-0 m-4" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header bg-danger text-white">
            <strong class="me-auto">Deleted</strong>
            <button type="button" class="btn-close btn-close-white ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            @TempData["ToastMessage"]
        </div>
    </div>
    <script>
        var toastEl = document.querySelector('.toast');
        if (toastEl) new bootstrap.Toast(toastEl).show();
    </script>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
}

