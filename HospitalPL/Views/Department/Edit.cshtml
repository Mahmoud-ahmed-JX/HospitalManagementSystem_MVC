@model HospitalBLL.DTOs.DepartmentDtos.DepartmentDto

@{
    ViewData["Title"] = "Edit Department";
}

<div class="hospital-card mx-auto" style="max-width: 600px;">
    <h2 class="mb-4 text-accent">
        <i class="bi bi-pencil-square me-2"></i> Edit Department
    </h2>
    <form asp-action="Edit" method="post" autocomplete="off">
        <input type="hidden" asp-for="Id" />
        <input asp-for="Name" class="form-control" placeholder="Department name" />
        <span asp-validation-for="Name" class="text-danger small"></span>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger small"></span>
        <div class="d-flex justify-content-between align-items-center mt-4">
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
            <button type="submit" class="btn btn-primary px-4">
                <i class="bi bi-save"></i> Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
}

